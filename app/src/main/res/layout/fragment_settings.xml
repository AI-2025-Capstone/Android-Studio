<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:src="@drawable/bigpicture_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvrecently"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최근 본 매물"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/baseline_recently_time"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvnoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/baseline_notifications"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다크모드 설정"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/outline_darkmode"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvetc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="더 넣을거 있으면"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvetc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvetc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="넣기"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:background="@drawable/settings_text_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>